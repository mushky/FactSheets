<%= will_paginate @syrianote %>
<div class="container">
	<% @syrianotes.each do |syrianote| %>
		<div class="jumbotron">
			<div class="container">
				<div id="note">
					<strong>Category:</strong><br><%= syrianote.category %><br>
					<strong>Title:</strong><br><%= syrianote.title %><br>
					<strong>URL:<br><a href="<%= syrianote.url %>">LINK TO ARTICLE</a></strong><br>
					<strong>Publisher:</strong><br><%= syrianote.publisher %><br>
					<strong>Description:</strong><br><%= syrianote.description %><br>
					<strong>Tags:</strong><br><%= syrianote.tags %><br>
					|<%= link_to 'Show', syrianote_path(syrianote), class: "btn-sm btn-info" %>| 
					|<%= link_to 'Edit', syrianote_path(syrianote), class: "btn-sm btn-warning" %>|
					|<%= link_to 'Delete', syrianote_path(syrianote), class: "btn-sm btn-danger", method: :delete, data: { confirm: "Are you sure?" } %>|
				</div>		
			</div>
		</div>
	<% end %>
	<%= will_paginate @syrianote %>
</div>

